<header class="sticky top-0 z-50 h-16 bg-brand-header text-white shadow-sm">
  <div class="mx-auto max-w-[1200px] h-16 px-4 md:px-8 flex items-center gap-4">
    <!-- 左：ロゴ（ログイン前後でリンク先を出し分け） -->
    <%= link_to (user_signed_in? ? authenticated_root_path : unauthenticated_root_path),
                class: "flex items-center gap-3 shrink-0" do %>
      <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 3l9 8h-3v9h-6v-5H12v5H6v-9H3l9-8z"/>
      </svg>
      <span class="text-2xl md:text-3xl font-semibold tracking-wide">Fasty</span>
    <% end %>

    <!-- 中央：挨拶（SM以上で表示） -->
    <div class="mx-auto hidden sm:block">
      <% if user_signed_in? %>
        <span class="text-base sm:text-lg md:text-xl font-semibold">
          こんにちは、<%= current_user.name.presence || "ゲスト" %> さん！
        </span>
      <% end %>
    </div>

    <!-- 右：リンク -->
    <nav class="ml-auto flex items-center gap-6">
      <% if user_signed_in? %>
        <%= link_to "記録一覧", fasting_records_path,
              class: "text-sm md:text-base font-medium text-white/95 hover:text-white hover:underline transition" %>

        <!-- ★ 追加：瞑想ガイド -->
        <% active_meditations = request.path.start_with?("/meditations") %>
        <%= link_to "瞑想ガイド", meditations_path,
              class: "text-sm md:text-base font-medium #{active_meditations ? 'text-white underline' : 'text-white/95 hover:text-white hover:underline'} transition" %>

        <!-- DELETE を確実に送りつつ“リンク風”に見せる -->
        <%= button_to "ログアウト", destroy_user_session_path,
              method: :delete,
              form: { class: "inline" },
              class: "text-sm md:text-base font-medium text-white/95 hover:text-white hover:underline bg-transparent p-0 border-0 cursor-pointer" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path,
              class: "text-base md:text-lg font-medium text-white/95 hover:text-white hover:underline transition" %>
      <% end %>
    </nav>
  </div>
</header>
