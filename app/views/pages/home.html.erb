<!-- app/views/pages/home.html.erb -->

<%# ===== メタ & レイアウト調整 ===== %>
<% content_for :title,       "Fasty | ファスティング × 瞑想で内側からきれいを育てる" %>
<% content_for :description, "ファスティングと瞑想をやさしく続けるための記録アプリ。シンプルな操作で、習慣化をサポートします。" %>
<% content_for :full_bleed, true %>

<section class="hero hero--compact hero--title-top hero--fluid-stack">
  <div class="hero__inner">
    <!-- ロゴタイトル（柔らかグラデーション版） -->
    <h1 class="hero__title -mt-1 sm:-mt-2 md:-mt-3
               font-extrabold leading-[1.06] tracking-[.01em]
               text-[clamp(42px,8.2vw,80px)]
               bg-gradient-to-r from-emerald-400 via-teal-300 to-emerald-400
               bg-clip-text text-transparent
               drop-shadow-[0_8px_22px_rgba(16,185,129,0.18)]">
      Fasty
    </h1>

    <!-- キャッチコピー（SPも改行） -->
    <p class="hero__kicker !font-semibold">
      ファスティング × 瞑想で<br>
      内側からきれいを育てる。
    </p>

    <!-- アクション -->
    <div class="hero__actions">
      <%# ▼ 効果セクション＋AI食事コンシェルジュ（LP用） %>
      <div class="mt-8 md:mt-10 w-full">
        <div class="mx-auto max-w-5xl px-4 sm:px-6">
          <div class="rounded-3xl bg-white/95 shadow-xl ring-1 ring-emerald-100/80 px-4 py-6 sm:px-6 sm:py-7 md:px-8 md:py-8">

            <!-- ファスティング / 瞑想 の 2 カラム -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-5 md:gap-7">
              <!-- ファスティング -->
              <article class="rounded-3xl bg-emerald-50/80 ring-1 ring-emerald-100 px-4 py-5 sm:px-5 sm:py-6">
                <p class="inline-flex items-center rounded-full bg-white/80 px-3 py-1 text-[12px] sm:text-[13px] font-semibold text-emerald-600">
                  🌱 <span class="font-bold">ファスティング</span>
                </p>
                <h2 class="mt-3 text-xl sm:text-2xl font-semibold leading-snug">
                  ファスティングで、心も体も<br class="hidden sm:block">リセット。
                </h2>
                <p class="mt-3 text-[13.5px] sm:text-sm text-stone-700 leading-relaxed">
                  胃腸を休ませることで代謝が整い、集中力や睡眠の質もアップ。<br class="hidden sm:block">
                  食べない時間を通じて、自分の体と丁寧に向き合うきっかけに。
                </p>
                <ul class="mt-4 space-y-2 text-[13.5px] sm:text-sm text-stone-800">
                  <li>✅ 胃腸を休めてスッキリ</li>
                  <li>✅ 集中力・睡眠の質UP</li>
                  <li>✅ 食べ癖をリセット</li>
                </ul>
              </article>

              <!-- 瞑想 -->
              <article class="rounded-3xl bg-rose-50/80 ring-1 ring-rose-100 px-4 py-5 sm:px-5 sm:py-6">
                <p class="inline-flex items-center rounded-full bg-white/80 px-3 py-1 text-[12px] sm:text-[13px] font-semibold text-rose-500">
                  💗 <span class="font-bold">瞑想</span>
                </p>
                <h2 class="mt-3 text-xl sm:text-2xl font-semibold leading-snug">
                  瞑想で、内側から整う。
                </h2>
                <p class="mt-3 text-[13.5px] sm:text-sm text-stone-700 leading-relaxed">
                  深い呼吸で心が落ち着き、ストレスを手放せます。<br class="hidden sm:block">
                  無駄食いが減り、心身の調和が生まれます。
                </p>
                <ul class="mt-4 space-y-2 text-[13.5px] sm:text-sm text-stone-800">
                  <li>🌿 イライラ・不安をリリース</li>
                  <li>🌿 食欲の波をやさしく整える</li>
                  <li>🌿 自分を大切にできる時間</li>
                </ul>
              </article>
            </div>

            <!-- AI食事コンシェルジュ（ファス/瞑想カードの内側・中央） -->
            <div class="mt-6 pt-5 border-t border-emerald-50">
              <article class="mx-auto max-w-2xl rounded-3xl bg-emerald-50/70 ring-1 ring-emerald-100 px-4 py-5 sm:px-5 sm:py-6 text-center">
                <p class="inline-flex items-center rounded-full bg-white/80 px-3 py-1 text-[12px] sm:text-[13px] font-semibold text-emerald-700">
                  🍴 <span class="font-bold">AI栄養士</span>
                </p>
                <h3 class="mt-3 text-lg sm:text-xl md:text-2xl font-semibold tracking-tight">
                  AIがあなたに合った食事メニューを提案
                </h3>
                <p class="mt-3 text-[13.5px] sm:text-sm text-stone-700 leading-relaxed">
                  あなたのファスティング記録にもとづいて、<br class="hidden sm:block">
                  AIが<strong>朝・昼・夜の回復食メニュー</strong>を自動でつくります。
                </p>
                <ul class="mt-3 space-y-1.5 text-[13.5px] sm:text-sm text-stone-800 text-left sm:text-center sm:inline-block">
                  <li>✅ 消化にやさしい和食中心のメニュー</li>
                  <li>✅ 一品ごとに「理由」と「注意点」を表示</li>
                  <li>✅ 提案内容は毎回少しずつ変化</li>
                </ul>

                <!-- 「アプリの使い方」CTA（カード内・中央） -->
                <div class="mt-5 flex justify-center">
                  <%= link_to "アプリの使い方",
                        (guide_path rescue "#"),
                        class: "inline-flex items-center justify-center rounded-2xl px-7 py-3 text-[15px] font-semibold
                                btn-mint
                                focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-emerald-400" %>
                </div>
              </article>
            </div>

          </div>
        </div>
      </div>

      <%# ▼ アカウント操作
          1段目: 新規登録 / ログイン
          2段目: Googleでログイン / LINEでログイン %>
      <div class="mt-6 md:mt-8 w-full">
        <div class="flex flex-col items-center gap-3 sm:gap-4">

          <!-- 1段目: 新規登録 / ログイン -->
          <div class="flex flex-wrap gap-3 justify-center">
            <!-- 新規登録 -->
            <%= link_to new_user_registration_path,
                  class: "inline-flex items-center justify-center rounded-xl px-6 py-3 text-[15px] font-semibold
                          btn-mint
                          focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-emerald-400" do %>
              新規登録
            <% end %>

            <!-- ログイン -->
            <%= link_to new_user_session_path,
                  class: "inline-flex items-center justify-center rounded-xl px-6 py-3 text-[15px] font-semibold
                          bg-white text-emerald-400 ring-1 ring-emerald-300 hover:bg-white/90 shadow-sm
                          focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-emerald-300" do %>
              ログイン
            <% end %>
          </div>

          <!-- 2段目: Google / LINE ログイン -->
          <div class="flex flex-wrap gap-3 justify-center">
            <!-- Googleでログイン -->
            <%= button_to user_google_oauth2_omniauth_authorize_path,
                  method: :post,
                  form:  { data: { turbo: false } },
                  class: "inline-flex items-center justify-center gap-2 rounded-xl px-6 py-3 text-[15px] font-semibold
                          bg-white text-emerald-400 ring-1 ring-emerald-300 hover:bg-white/90 shadow-sm
                          focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-emerald-300",
                  aria:  { label: "Googleでログイン" } do %>
              <span class="inline-flex -ml-0.5" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 262" width="18" height="18" role="img" focusable="false">
                  <path fill="#4285F4" d="M255.68 133.5c0-10.7-.86-18.5-2.72-26.6H130.55v48.2h71.72c-1.45 12-9.3 30-26.8 42.2l-.24 1.6 38.9 30 .27.3c25.37-23.4 40.37-57.8 40.37-96.9Z"/>
                  <path fill="#34A853" d="M130.55 261.1c36.7 0 67.46-12.1 89.96-32.9l-42.9-33.1c-11.5 8.1-26.9 13.8-47 13.8-35.9 0-66.3-23.9-77.1-56.9l-1.6.1-41.97 32.5-.55.1c22.45 44.6 68.5 76.5 121.66 76.5Z"/>
                  <path fill="#FBBC05" d="M53.45 151.9c-2.9-8.1-4.6-16.8-4.6-25.9s1.7-17.8 4.6-25.9l-.1-1.7L11.03 65.5l-1.34.6C3.32 79.9 0 96 0 112.9c0 16.9 3.32 33 9.7 46.8l43.75-33.8Z"/>
                  <path fill="#EB4335" d="M130.55 50.2c25.5 0 42.7 11 52.5 20.2l38.3-37.5C197.8 12 167.25 0 130.55 0 77.4 0 31.35 31.9 8.9 76.5l44.45 33.6c10.8-33 41.2-59.9 77.2-59.9Z"/>
                </svg>
              </span>
              <span>Googleでログイン</span>
            <% end %>

            <!-- LINEでログイン -->
            <%= button_to user_line_omniauth_authorize_path,
                  method: :post,
                  form:  { data: { turbo: false } },
                  class: "inline-flex items-center justify-center gap-2 rounded-xl px-6 py-3 text-[15px] font-semibold
                          bg-white text-emerald-400 ring-1 ring-emerald-300 hover:bg-white/90 shadow-sm
                          focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-emerald-300",
                  aria:  { label: "LINEでログイン" } do %>
              <span class="inline-flex -ml-0.5" aria-hidden="true">
                <svg width="18" height="18" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg" role="img" focusable="false">
                  <rect x="0" y="0" width="36" height="36" rx="8" fill="#06C755" />
                  <text x="18" y="21" text-anchor="middle"
                        font-size="11"
                        font-family="system-ui, -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif"
                        fill="#FFFFFF">
                    LINE
                  </text>
                </svg>
              </span>
              <span>LINEでログイン</span>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>
