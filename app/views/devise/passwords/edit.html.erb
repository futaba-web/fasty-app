<h2 class="text-3xl font-bold text-center mb-6">
  <%= t("devise.passwords.edit.change_your_password") %>
</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
             html: { method: :put, class: "space-y-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t("devise.passwords.edit.new_password") %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full" %>
    <% if @minimum_password_length %>
      <small><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("devise.passwords.edit.confirm_new_password") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full" %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.passwords.edit.change_my_password"),
                 class: "btn btn-primary w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
