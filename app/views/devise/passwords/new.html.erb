<h3 class="auth-title"><%= t("devise.passwords.new.Forgot_your_password?") %></h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
             html: { method: :post, class: "auth-stack" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, t("activerecord.attributes.user.email"), class: "block mb-2 font-medium text-gray-700" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="auth-links">
  <%= render "devise/shared/links" %>
</div>
