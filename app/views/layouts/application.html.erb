<!DOCTYPE html>
<html lang="ja">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Fasty" %></title>

    <%# ================================
       Google Analytics（本番のみ）
       ================================ %>
    <% if Rails.env.production? %>
      <!-- Google tag (gtag.js) -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-M7X4TXYH0Q"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-M7X4TXYH0Q');
      </script>
    <% end %>

    <!-- 基本: モバイル最適化 -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#16a34a"><!-- manifest と合わせる -->

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- CSS (Sprockets/Tailwind) -->
    <%= stylesheet_link_tag "tailwind",
                            "application",
                            "layout",
                            "drawer",
                            "landing",
                            "devise",
                            "setting",
                            "data-turbo-track": "reload" %>

    <!-- 画面個別で <head> 追記 -->
    <%= yield :head %>

    <!-- JS (importmap) -->
    <%= javascript_importmap_tags %>

    <!-- PWA / Icons -->
    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png">

    <%# ================================
       OGP / Twitter Card（デフォルト + 上書き）
       ================================ %>
    <% meta = default_meta %>
    <% page_title       = content_for?(:title)       ? yield(:title)       : meta[:title] %>
    <% page_description = content_for?(:description) ? yield(:description) : meta[:description] %>
    <% page_image       = content_for?(:og_image)    ? yield(:og_image)    : meta[:image] %>
    <% page_url         = content_for?(:og_url)      ? yield(:og_url)      : (request&.original_url || meta[:url]) %>
    <% page_type        = content_for?(:og_type)     ? yield(:og_type)     : "website" %>

    <!-- Canonical -->
    <link rel="canonical" href="<%= page_url %>">

    <!-- Open Graph -->
    <meta property="og:type"        content="<%= page_type %>">
    <meta property="og:site_name"   content="<%= meta[:site_name] %>">
    <meta property="og:title"       content="<%= page_title %>">
    <meta property="og:description" content="<%= page_description %>">
    <meta property="og:url"         content="<%= page_url %>">
    <meta property="og:image"       content="<%= page_image %>">

    <!-- Twitter Card -->
    <meta name="twitter:card"        content="summary_large_image">
    <meta name="twitter:title"       content="<%= page_title %>">
    <meta name="twitter:description" content="<%= page_description %>">
    <meta name="twitter:image"       content="<%= page_image %>">
  </head>

  <%# ===== 背景画像の切替ロジック（landing.css の body.hero-bg::* を使う） ===== %>
  <% landing_page = (controller_path == "pages"  && action_name == "home") %>
  <% guide_page   = (controller_path == "guides") %>
  <% auth_page    = (controller.respond_to?(:devise_controller?) && controller.devise_controller?) %>

  <% default_bg    = asset_path("landing/hero.jpg") %>
  <% authed_bg_try = begin asset_path("landing/hero-authed.png") rescue nil end %>
  <% authed_bg     = authed_bg_try.presence || default_bg %>

  <% page_override = content_for?(:hero_bg_url) ? yield(:hero_bg_url) : nil %>

  <% show_hero = landing_page || guide_page || auth_page || user_signed_in? || page_override.present? %>
  <% bg_url    = (page_override.presence || (user_signed_in? ? authed_bg : default_bg)) %>

  <body
    data-controller="menu"
    class="min-h-dvh flex flex-col bg-gray-50 text-gray-900<%= landing_page ? ' landing-root' : '' %><%= show_hero ? ' hero-bg' : '' %>"
    style="<%= show_hero ? "--hero-bg: url('#{bg_url}')" : '' %>">

    <%= render "shared/header" %>

    <%= render("shared/menu_drawer") if user_signed_in? %>

    <main id="main" role="main" class="grow">
      <div class="mx-auto w-full max-w-screen-lg px-4 sm:px-6 lg:px-8">
        <%= render "shared/flash" %>
      </div>

      <div class="app-container mx-auto w-full max-w-screen-lg px-4 sm:px-6 lg:px-8 py-6 sm:py-8 <%= 'is-full-bleed' if content_for?(:full_bleed) %>">
        <%= yield %>
      </div>
    </main>

    <footer class="mt-auto">
      <%= render "shared/footer" %>
    </footer>

    <%= render "shared/tw_safelist" %>

    <% if Rails.env.production? %>
      <script>
        if ("serviceWorker" in navigator) {
          window.addEventListener("load", function () {
            navigator.serviceWorker.register("/service-worker.js");
          });
        }
      </script>
    <% end %>
  </body>
</html>
