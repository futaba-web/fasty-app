<div class="record-page">
  <!-- タイトル + 右側アイコン -->
  <div class="record-header">
    <h1 class="record-title">この日の記録</h1>

    <div class="record-toolbar">
      <!-- 編集 -->
      <%= link_to edit_fasting_record_path(@record),
                  class: "icon-btn",
                  title: "編集",
                  aria: { label: "編集" } do %>
        <%= render "shared/icons/pencil", size_px: 18, class: "text-gray-600" %>
      <% end %>

      <!-- 削除 -->
      <%= link_to fasting_record_path(@record),
                  data: { turbo_method: :delete,
                          turbo_confirm: "この記録を削除します。よろしいですか？" },
                  class: "icon-btn icon-btn--danger",
                  title: "削除",
                  aria: { label: "削除" } do %>
        <%= render "shared/icons/trash", size_px: 18, class: "text-rose-700" %>
      <% end %>
    </div>
  </div>

  <!-- 記録詳細（パーシャル） -->
  <%= render "fasting_records/record_detail", record: @record %>
</div>
