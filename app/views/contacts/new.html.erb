<!-- app/views/contacts/new.html.erb -->
<div class="mx-auto max-w-sm sm:max-w-md md:max-w-lg
            p-5 md:p-6 mt-6 rounded-2xl bg-white/95 shadow-lg ring-1 ring-stone-200 backdrop-blur-sm
            overflow-visible pb-10">

  <h1 class="text-lg md:text-xl font-semibold">お問い合わせ</h1>
  <p class="mt-1 text-sm text-stone-600 leading-relaxed">
    体調不良などの緊急時は医療機関へご相談ください。<br>
    本フォームはアプリに関するお問い合わせ窓口です。
  </p>

  <% if flash[:notice] %>
    <div class="mt-4 rounded-lg bg-emerald-50 text-emerald-900 px-4 py-3">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with url: contact_path, method: :post, local: true,
                class: "mt-5 space-y-4",
                data: { turbo_submits_with: "送信中…" } do |f| %>

    <div>
      <label class="block text-sm mb-1" for="contact_name">お名前</label>
      <%= f.text_field :name, id: "contact_name",
            class: "w-full rounded-lg border px-3 py-2",
            required: true, autocomplete: "name" %>
    </div>

    <div>
      <label class="block text-sm mb-1" for="contact_email">メールアドレス</label>
      <%= f.email_field :email, id: "contact_email",
            class: "w-full rounded-lg border px-3 py-2",
            required: true, autocomplete: "email" %>
    </div>

    <div>
      <label class="block text-sm mb-1" for="contact_subject">件名</label>
      <%= f.text_field :subject, id: "contact_subject",
            class: "w-full rounded-lg border px-3 py-2",
            required: true %>
    </div>

    <div>
      <label class="block text-sm mb-1" for="contact_body">お問い合わせ内容</label>
      <%= f.text_area :body, id: "contact_body", rows: 6,
            class: "w-full rounded-lg border px-3 py-2",
            required: true %>
    </div>

    <p class="text-xs text-stone-500">
      送信いただいた情報は <%= link_to "プライバシーポリシー", privacy_path, class: "underline" %> に従い取り扱います。
    </p>

    <!-- 送信ボタン（中央寄せ / f.submit） -->
    <div class="pt-2 flex justify-center">
      <%= f.submit "送信する",
            class: "inline-flex items-center justify-center gap-2
                    rounded-lg bg-emerald-600 text-white
                    px-5 py-2.5
                    hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-400
                    disabled:opacity-60 disabled:cursor-not-allowed" %>
    </div>
  <% end %>
</div>
