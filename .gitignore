# =========================================================
# Git Ignore (Rails + Docker + Tailwind) — Fasty
# =========================================================

# --- Bundler / dependencies ---
/vendor/bundle
/.bundle

# --- Logs / temp ---
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# pid (keep dir, ignore files)
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# --- Storage (ActiveStorage dev uploads) ---
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# --- Assets (compiled) ---
/public/assets
/public/packs
/public/packs-test

# Tailwind / build artifacts
/app/assets/builds/
/app/assets/images/landing/hero.backup*.jpg

# dev-only: Figma overlay
app/assets/images/landing/figma-comp.*

# --- Credentials / keys ---
/config/master.key
/config/credentials/*.key

# --- Databases (project uses MySQL, but ignore SQLite just in case) ---
/db/*.sqlite3
/db/*.sqlite3-journal

# NOTE: 通常は schema.rb をコミットしますが、運用方針に合わせて無視
# use migrations only in prod
/db/schema.rb

# --- Node / Yarn ---
/node_modules
/yarn-error.log
npm-debug.log*
/package-lock.json # （チーム方針でlockをコミットしない場合のみ。必要なら削除）

# --- Coverage / specs ---
/coverage
/spec/examples.txt

# --- Editors / OS ---
.DS_Store
*.swp
*.swo
.idea/
.vscode/
*.orig

# --- Docker ---
/docker/*.env
/docker/*.log

# --- ENV files ---
# まず全ての .env を無視
/.env
/.env.*
# ただしテンプレートはトラックする
!/.env.example
!/.env*.erb

# --- Rails console history / misc ---
/.irb_history
/.byebug_history
